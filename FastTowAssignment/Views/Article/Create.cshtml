@model FastTowAssignment.Models.Article

@{
    ViewData["Title"] = "Add New Article";
}

<h1>Create Article</h1>

<body class="adminPanel-background">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Title" class="control-label"></label>
                    <input asp-for="@Model.Title" class="form-control" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Text" class="control-label"></label>
                    <input asp-for="@Model.Text" class="form-control" />
                    <span asp-validation-for="@Model.Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Article" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>