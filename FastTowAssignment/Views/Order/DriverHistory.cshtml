@model IEnumerable<Order>
@{
    ViewData["Title"] = "Completed Orders History";
}

<body class="order-background">
    <div class="text-center">
        <h1 class="display-4">Completed Orders History</h1>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>Car</td>
                <td>Departure City</td>
                <td>Destination City</td>
                <td>Price (RM)</td>
                <td>Status</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Car</td>
                    <td>@Html.DisplayFor(modelItem => order.DepartureCity.Name)</td>
                    <td>@Html.DisplayFor(modelItem => order.DestinationCity.Name)</td>
                    <td>@order.Price</td>
                    <td>
                        @Html.DisplayFor(modelItem => order.CurrentStatus.Name);
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>