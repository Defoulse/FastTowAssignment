@model IEnumerable<FastTowAssignment.Models.UserMedia>
@{
    ViewData["Title"] = "Media File Upload";
}

<h1>Media File Upload</h1>

<body class="mediaFile-background">
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("UploadMediaFile", "UserMedia", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">Upload Your files</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <input type="file" name="file" class="upload-button" />
                            <br />
                            <input type="submit" class="btn btn-primary" value="Save File" />
                        </div>
                    </div>
                </div>
                <div>
                    <div class="file-count-display">You have @ViewBag.PhotoCount files </div>
                </div>
            </div>
        }
        </div>
        <br />
        <div class="row">
            <br />
            @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb image-description" style="margin-right:100px;display:flex;flex-direction:column;">
                <a class="thumbnail" href="@item.MediaUrl">
                    <img class="img-responsive" src="@item.MediaUrl" height="200" alt="">
                </a>
                <p style="overflow-wrap:break-word;">
                    File Name: @item.MediaFileName
                </p>
                <p>
                    Date-Time Uploaded: @item.DateTimeUploaded
                </p>
                <p>
                    File Type: @item.MediaFileType
                </p>
                <a href="@Url.Action("DeleteMediaFile", "UserMedia",new { id = item.MediaId })" class="btn btn-default btn-block">
                    <Span class="btn" style="color: #fff;background-color: #940000;" aria-hidden="true"> Delete Image</Span>
                </a>
            </div>
        }
        </div>
    </div>
</body>
